<img 
    @onclick="UpdateGif"
    style="max-width:100%;cursor:pointer;" 
    src="@_url"
    />
@code {
    private Random _generator;
    private int _random;
    private string _url;

    protected override void OnInitialized()
    {
        _generator = new Random();
        UpdateGif();
        base.OnInitialized();
    }

    private void UpdateGif()
    {
        _random = _generator.Next(1, 9999);
        _url = $"https://thecatapi.com/api/images/get?format=src&type=gif&rand={_random}";
    }
}