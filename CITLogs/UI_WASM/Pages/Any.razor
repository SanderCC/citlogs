@page "/Any"
@using Manager
<h3>Any Logs</h3>

@if (_any.Error != null)
{
    <h5>ERROR: @_any.Error</h5>
}
else if (_any.Duration > 0)
{
    <h5>Duration: @_any.Duration seconds</h5>
}

<div class="row">
    <div class="col-lg-8">
        <EditForm Model="_input" OnSubmit="ExecuteDivider">
            <textarea placeholder="Paste your logs here..." class="form-control" rows="7" @bind="_input"></textarea>
            <button class="btn btn-dark">Render</button>
        </EditForm>
    </div>
    <div class="col-lg-4">
            <textarea placeholder="Each filter on a different line" class="form-control" rows="7" @bind="_filters"></textarea>
    </div>
</div>
<div class="row">
    @try
    {
        if (_any.Filtered != null && _any.Filtered.Any())
        {
            <div class="col-lg-12">
                <ContentArea Title="Filtered Lines" Content="@_any.Filtered" />
            </div>
        }
    }
    catch (Exception e)
    {
        Console.WriteLine(e);
    }
    @for (int i = 0; i < 10; i++)
    {
        <br/>
    }
</div>

@code {
    private Anylog _any;
    private string _input;
    private string _filters;

    protected override void OnInitialized()
    {
        _input = "";
        _filters = "";
        _any = new Anylog();
        _any.Filter(_input, _filters);
        _any = new Anylog();
        base.OnInitialized();
    }

    private void ExecuteDivider()
    {
        _any = new Anylog();
        _any.Filter(_input, _filters);
    }

}